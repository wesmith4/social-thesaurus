{{!-- Initialize collapsible --}}
<script>
  $(document).ready(function(){

    $('.collapsible').collapsible();

  });
</script>

<div id="resultsPage" class="container">
  <ul class="collapsible popout">
    {{#each results}}
      <li>
        <div class="collapsible-header active"><h5>{{word}}</h5></div>
        <div class="collapsible-body">
          <ul class="collection">
            <li class="collection-item">
              <form action="/words/{{id}}/relate" method="POST">
                <h5>Add a related word:</h5>
                <input type="text" name="relatedWord" placeholder="Related word">
                <button type="submit">Add</button>
              </form>
            </li>
            <li class="collection-header"><h4>Related Words</h4></li>
            {{#each relatedWords}}
            <li class="collection-item"><a href="/search?term={{word}}">{{word}}</a></li>
            {{/each}}
          </ul>
        </div>
      </li>
    {{/each}}
  </ul>

</div>
