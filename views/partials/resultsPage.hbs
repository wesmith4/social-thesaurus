{{!-- Initialize collapsible --}}
<script>
  $(document).ready(function(){

    $('.collapsible').collapsible();

  });
</script>

<div id="resultsPage">
  <div class="container" style="overflow-y: scroll;">
  <ul class="collapsible popout" id="results" style="overflow-y: scroll;">
    {{#each results}}
      <li {{#if_eq word ../searchTerm}}class="active"{{/if_eq}}>
        <div class="collapsible-header active hoverable"><h4>{{word}}</h4></div>
        <div class="collapsible-body brown lighten-3">
          <ul class="collection">
            <li class="collection-header"><h5>Definitions</h5></li>
            {{#each definitions}}
            <li class="collection-item">
              <span class="partOfSpeech"><em>{{partOfSpeech}}</em></span><span>:    {{definition}}</span>
            </li>
            {{/each}}
          </ul>
          <ul class="collection">
            <li class="collection-header"><h5>Related Words</h5></li>
            <li class="collection-item">
              <div class="row">
                <form action="/words/{{id}}/relate" method="POST">
                <div class="col s6 offset-s2">
                  <div class="input-field">
                    <input type="text" name="relatedWord" placeholder="Add related word..." class="valign-wrapper">
                  </div>
                  </div>
                  <div class="col s2">
                    <div class="input-field">
                    <button class="btn-floating teal lighten-2" type="submit"><i class="material-icons">add</i></button>
                  </div>
                </div>
                </form>
              </div>
            </li>
            {{#each relatedWords}}
            <a class="collection-item hoverable" href="/search?term={{word}}">{{word}}</a>
            {{/each}}
          </ul>
        </div>
      </li>
    {{/each}}
  </ul>
  </div>
</div>
